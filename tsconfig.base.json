{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@homecare-nx/xplat/core": ["libs/xplat/core/src/index.ts"],
      "@homecare-nx/xplat/features": ["libs/xplat/features/src/index.ts"],
      "@homecare-nx/xplat/utils": ["libs/xplat/utils/src/index.ts"],
      "@homecare-nx/xplat/ionic/core": ["libs/xplat/ionic/core/src/index.ts"],
      "@homecare-nx/xplat/ionic/features": [
        "libs/xplat/ionic/features/src/index.ts"
      ],
      "@homecare-nx/xplat/web/core": ["libs/xplat/web/core/src/index.ts"],
      "@homecare-nx/xplat/web/features": [
        "libs/xplat/web/features/src/index.ts"
      ],
      "@homecare-nx/xplat/environments": [
        "libs/xplat/core/src/lib/environments/base/index.ts"
      ],
      "@homecare/auth0": ["libs/auth0/src/index.ts"],
      "@homecare/shared": ["libs/shared/src/index.ts"],
      "@homecare/core": ["libs/core/src/index.ts"],
      "@homecare/appointment": ["libs/appointment/src/index.ts"],
      "@homecare/storage": ["libs/storage/src/index.ts"],
      "@homecare/entity": ["libs/entity/src/index.ts"],
      "@homecare/product": ["libs/product/src/index.ts"],
      "@homecare/billing": ["libs/billing/src/index.ts"],
      "@homecare/plan": ["libs/plan/src/index.ts"],
      "@homecare/customer": ["libs/customer/src/index.ts"],
      "@homecare/ionic-shared": ["libs/ionic-shared/src/index.ts"],
      "@homecare/common": ["libs/common/src/index.ts"],
      "@homecare/ionic-common": ["libs/ionic-common/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
